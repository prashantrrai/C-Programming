@model Country

<form method="post">
	<div class="border p-5 mt-4 d-flex justify-content-around">
		<div>
			<div class="row pb-2">
				<h2 class="text-primary">Add Country</h2>
				<hr />
			</div>

			@* 		<div class="form-group">
			<label class="form-label mt-4">Floating labels</label>
			<div class="form-floating mb-3">
			<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
			<label for="floatingInput">Email address</label>
			</div>
			<div class="form-floating">
			<input type="password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="off">
			<label for="floatingPassword">Password</label>
			</div>
			</div> *@


			@* <div asp-validation-summary="All"></div> *@
			<div action="mb-3">
				<label asp-for="CountryName">Name</label>
				<input asp-for="CountryName" action="form-control" />
				<span asp-validation-for="CountryName" class="text-danger"></span>
			</div>

			<div action="mb-3">
				<label asp-for="Abbreviation">Abbreviation</label>
				<input asp-for="Abbreviation" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="Currency">Currency</label>
				<input asp-for="Currency" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="DialingCode">Dialing Code</label>
				<input asp-for="DialingCode" action="form-control" />
				<span asp-validation-for="DialingCode" class="text-danger"></span>
			</div>

			<div action="mb-3">
				<label asp-for="TimeZone">TimeZone</label>
				<input asp-for="TimeZone" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="CountryCapital">Country Capital</label>
				<input asp-for="CountryCapital" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="Flag">Flag</label>
				<input asp-for="Flag" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="CreatedBy">CreatedBy</label>
				<input asp-for="CreatedBy" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="CreatedAt">CreatedAt</label>
				<input asp-for="CreatedAt" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="ModifiedBy">ModifiedBy</label>
				<input asp-for="ModifiedBy" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="ModifiedAt">ModifiedAt</label>
				<input asp-for="ModifiedAt" action="form-control" />
			</div>

			<div action="mb-3">
				<label asp-for="IsActive">IsActive</label>
				<input asp-for="IsActive" action="form-control" />
			</div>

			<div class="d-flex justify-content-around">
				<button class="btn btn-outline-primary" type="submit" style="width: 150px">Create</button>
				<a class="btn" asp-controller="Country" asp-action="Index">Back to Previous</a>
			</div>
		</div>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}