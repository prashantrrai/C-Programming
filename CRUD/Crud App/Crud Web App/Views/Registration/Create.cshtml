@model Registration
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" asp-action="Create">
    <div class="bg-light p-5">
        <div style="w-100 bg-dark">
            <input type="text" class="mt-3" asp-for="Name" class="form-control" placeholder="Enter your name" />
        </div>

        <div>
            <input type="email" class="mt-3" asp-for="Email" class="form-control" placeholder="Enter your email" />
        </div>

        <div>
            <input type="password" maxlength="8" class="mt-3" asp-for="Password" class="form-control" placeholder="Enter your password" />
        </div>

        <div>
            <input type="tel" maxlength="10" class="mt-3" asp-for="Phone" class="form-control" placeholder="Enter your phone" />
        </div>

        <div class="p-2">
            <button class="btn btn-primary" type="submit">Submit</button>
            <button class="btn btn-dark" asp-controller="Registration" asp-action="Index">Back</button>
        </div>
    </div>
</form>