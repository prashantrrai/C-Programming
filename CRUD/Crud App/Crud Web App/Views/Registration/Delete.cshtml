@model Registration

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<form method="post" asp-action="Delete">
	<input type="hidden" asp-for="Id" />
	<div class="border p-5 mt-4 d-flex justify-content-around">
		<div>
			<div class="row pb-2">
				<h2 class="text-primary">Delete Profile</h2>
				<hr />
			</div>

			<div action="mb-3">
				<input asp-for="Name" action="form-control" disabled />
			</div>

			<div action="mb-3">
				<input asp-for="Email" action="form-control" disabled />
			</div>

			<div action="mb-3">
				<input asp-for="Password" action="form-control" disabled />

			</div>

			<div action="mb-3">
				<input asp-for="Phone" action="form-control" disabled />
			</div>


			<div class="d-flex justify-content-around">
				<button class="btn btn-outline-danger" type="submit" style="width: 150px">Remove</button>

				<a class="btn btn-dark" asp-controller="Registration" asp-action="Index">Back to Previous</a>
			</div>
		</div>
	</div>
</form>

