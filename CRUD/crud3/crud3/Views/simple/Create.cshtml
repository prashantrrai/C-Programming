@model employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" asp-action="Create">
    <div>
        <input asp-for="username" placeholder="enter username"/>
    </div>
    <div>
        <input type="password" asp-for="password"  placeholder="enter password"/>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Add</button>
        <button class="btn btn-dark" asp-controller="simple" asp-action="Index">Back</button>
    </div>
</form>